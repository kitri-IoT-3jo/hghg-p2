<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/board')-%>
    <%- include('../includes/nav')-%>
    <title>ㅎㄲㅎㄲ 게시판</title>
    <script type="text/javascript">
    window.onload = function() {
        document.getElementById('write').onclick = function() {
            location.href = '/board/write';
        }
        document.getElementById('to_board_main').onclick = function() {
            location.href = '/board';
        }
    }
    function next_page(num){
        var type = '<%=search[0]%>';
        var search = '<%=search[1]%>';
        if(search == undefined || search == '')
            location.href = '/board?page='+num;
        else
            location.href = '/board?page='+num+'&searchType=<%=search[0]%>&searchText=<%=search[1]%>';
    }
    </script>
    <style type="text/css">
      .pagebtns {
          display: inline-block;
          height: 24px;
          width: 20px;
          font-size: 1em;
      }
      .nextgroup{
          display: inline-block;
          height: 24px;
          width: 50px;
          font-size: 1em;
      }
      .pagebtns[href='javascript:next_page(<%=cpage%>);']{
          color: white;
          background-color: #ffc107;
          border-radius: 5px
      }
      .form-inline{
          float: right;
      }
      #to_board_main:hover{
          cursor:pointer;
      }
    </style>
</head>

<body>
    <!-- Navigation -->
    <%- include('../navbar/nav_main', {user:user})%>
    <div class="clear-fix"></div>
    <div class="container">
        <h3 style="display: inline; width: 50%;" id="to_board_main">전체글보기</h3>
        <form class="form-inline" action="/board" method="get">
            <select name="searchType" style="display: inline; width: 115px; margin-right: 10px;">
                    <option value="sub_con"> 제목+내용 </option>
                    <option value="name"> 작성자 </option>
            </select> 
            <input type="text" id="searchText" name="searchText" style="display: inline; width: 200px"> 
            <button type="submit" class="btn btn-light" style="display: inline">검색</button>
        </form>
        <table class="table table-hover">
            <colgroup>
                <col width="80px">
                <col width="*">
                <col width="120px">
                <col width="80px">
                <col width="80px">
            </colgroup>
            <thead>
                <tr>
                    <th>글번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th>조회수</th>
                </tr>
            </thead>
            <tbody>
                <% query.forEach((q)=>{%>
                <tr>
                    <td><%= q.board_id%></td>
                    <td><a href="/board/<%= q.board_id-%>"><%= q.subject%></a></td>
                    <td><%= q.nickname%></td>
                    <td><%= q.date%></td>
                    <td><%= q.hit%></td>
                </tr>
                <% });%>
            </tbody>
        </table>
        <div class="text-right">
            <button type="button" class="btn btn-warning" id="write">글쓰기</button>
        </div>
        <div class="text-center"><%- include('./board_buttons', {pages:pages, cpage:cpage})%></div>
    </div>
</body>

</html>